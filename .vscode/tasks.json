{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: Build active file (MinGW)",
      "type": "shell",
      "command": "C:/MinGW/bin/g++.exe",
      "options": { "shell": { "executable": "C:/Windows/System32/cmd.exe", "args": ["/d", "/c"] } },
      "args": [
        "-Wall",
        "-Wextra",
        "-g3",
        "\"${file}\"",
        "-o",
        "\"${workspaceFolder}/C++/output/${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}